{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@angular-with-react-micro-frontends-example/cart/feature-main": [
        "libs/cart/feature-main/src/index.ts"
      ],
      "@angular-with-react-micro-frontends-example/cart/ui-item": [
        "libs/cart/ui-item/src/index.ts"
      ],
      "@angular-with-react-micro-frontends-example/products/feature-main": [
        "libs/products/feature-main/src/index.ts"
      ],
      "@angular-with-react-micro-frontends-example/products/ui-card": [
        "libs/products/ui-card/src/index.ts"
      ],
      "@angular-with-react-micro-frontends-example/shared/data-access-cart": [
        "libs/shared/data-access-cart/src/index.ts"
      ],
      "@angular-with-react-micro-frontends-example/shared/data-access-products": [
        "libs/shared/data-access-products/src/index.ts"
      ],
      "@angular-with-react-micro-frontends-example/shared/ui-react-container": [
        "libs/shared/ui-react-container/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
